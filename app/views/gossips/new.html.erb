<html>
  <body>

	<% if flash[:error] %>
		<div class="alert alert-danger" role="alert">
		  <button type="button" class="close" data-dismiss="alert">&times;</button>
		  <%= flash[:error] %>
		  <% if @gossip.errors.any? %>
			  <p>Nous n'avons pas réussi à créer le potin pour la (ou les) raison(s) suivante(s) :</p>
			  <ul>
			    <% @gossip.errors.full_messages.each do |message| %>
			      <li><%= message %></li>
			    <% end %>
			  </ul>
		  <% end %>
		</div>
	<% elsif flash[:success] %>
	    <div class="alert alert-success">
	        <button type="button" class="close" data-dismiss="alert">&times;</button>
	        <%= flash[:success] %>
	    </div>
	<% end %>

    <br>
	<h3>GOSSIP CREATION</h3>
	<h5>Entre ton potin en utilisant le formulaire ci-dessous</h5><br>


	<div class="center">
		<%= form_for @gossip do |f| %>

			<div class="form-group">
				<label>Titre du Gossip</label>
				<%= f.text_field :title, class: 'form-control' %>
			</div>  

			<div class="form-group">
				<label>Contenu du Gossip</label>
				<%= f.text_area :content, class: 'form-control' %>
			</div>  

			<div class="form-group">
				<button type="submit" class="btn btn-info">Créer</button>
			</div>

		<%end%>
	</div>

	    
    <br>



    <!-- ... -->
  </body>
</html>





